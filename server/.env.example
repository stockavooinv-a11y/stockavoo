# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/stockavoo

# CORS Configuration
CLIENT_URL=http://localhost:5173

# JWT Secret
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRE=7d

# Email Configuration
# Choose service: 'gmail', 'mailtrap', or 'smtp'
EMAIL_SERVICE=mailtrap

# For Gmail (requires App Password - not regular password)
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password

# For Mailtrap (testing - emails won't actually be sent)
# Get credentials from https://mailtrap.io
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USER=your-mailtrap-username
EMAIL_PASSWORD=your-mailtrap-password

# For other SMTP services (SendGrid, Mailgun, etc.)
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USER=your-smtp-username
# EMAIL_PASSWORD=your-smtp-password

# Email sender info
EMAIL_FROM=noreply@stockavoo.com
EMAIL_FROM_NAME=Stockavoo
